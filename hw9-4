

def discount_price(discount):
    def discount_(price):
        price = price * (1-discount)
        return price
    return discount_



cost_15 = discount_price(0.15)
cost_10 = discount_price(0.10)
cost_05 = discount_price(0.05)
cost_00 = discount_price(0.0)

price = 100
print(cost_15(price))
print(cost_10(price))
print(cost_05(price))
print(cost_00(price))

print(discount_price(0.25)(100))



